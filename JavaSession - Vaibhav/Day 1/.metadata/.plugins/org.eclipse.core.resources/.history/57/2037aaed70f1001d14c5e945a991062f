package helloWorld;
import java.util.Scanner;

public class welcome {

	public static void main(String[] args) {
		
		Scanner readInput = new Scanner(System.in);
		
		System.out.print("Hello and Welcome to Java World");
				
		String guestName = readInput.nextLine();
		
		System.out.print("\n Welcome : " + guestName);
		
		
		System.out.print("\n Enter First Number : ");
		float firstNum = readInput.nextFloat();
		
		System.out.print("\n Enter Second Number : ");
		float secondNum = readInput.nextFloat();		
		
		float addition = firstNum + secondNum;
		float subtraction = firstNum - secondNum;
		float multiplication = firstNum * secondNum;
		float division = firstNum / secondNum;
		
		System.out.print("\n Addition is : " + addition);
		System.out.print("\n Subtraction is : " + subtraction);
		System.out.print("\n Multiplication is : " + multiplication);
		System.out.print("\n Division is : " + division);
		
		
		
	
		
	}

}
